{
    "name": "ist-alpine",
    "version": "1.0.0",
    "description": "Ist is a micro-app that reads your task list from [Todoist](https://todoist.com/), then displays the most important task that can currently be worked on.",
    "scripts": {
        "start": "dotenv -- webpack serve --open --mode development --no-stats",
        "build": "webpack --mode production",
        "test": "svelte-check && vitest run",
        "test:coverage": "svelte-check && vitest run --coverage",
        "test:watch": "vitest",
        "test:coverage:watch": "vitest --coverage",
        "lint": "eslint 'src/**/*.{svelte,ts}'",
        "depcruiser": "depcruise src --include-only '^src' --output-type x-dot-webpage -f dependencies.htm",
        "knip": "knip",
        "scan": "npm run depcruiser --silent && svelte-check && npm run knip --silent && npm run lint --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/realmikkifriend/ist.git"
    },
    "author": "realmikkifriend",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/realmikkifriend/ist/issues"
    },
    "homepage": "https://github.com/realmikkifriend/ist#readme",
    "engines": {
        "node": "22.x"
    },
    "dependenciesComments": {
        "webpack": "locked at 5.99.8 for compatibility with Console Ninja. Re-evaluate 2025-10-01",
        "typescript": "locked at 5.8.2 as webpack dependency"
    },
    "dependencies": {
        "@doist/todoist-api-typescript": "^5.1.1",
        "@fontsource/clear-sans": "^5.2.5",
        "@humanspeak/svelte-markdown": "^0.8.9",
        "@tailwindcss/postcss": "^4.1.11",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.11",
        "@vitest/eslint-plugin": "^1.3.4",
        "chrono-node": "^2.8.3",
        "luxon": "^3.7.1",
        "svelte": "^5.0.0",
        "svelte-hero-icons": "^5.2.0",
        "svelte-loader": "^3.2.4",
        "svelte-persisted-store": "^0.12.0",
        "webpack": "5.99.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@svelte-put/shortcut": "^4.1.0",
        "@sveltejs/vite-plugin-svelte": "^4.0.0",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/svelte": "^5.2.8",
        "@types/luxon": "^3.7.1",
        "@types/node": "^24.2.0",
        "@vitest/coverage-v8": "^3.2.4",
        "autoprefixer": "^10.4.21",
        "css-loader": "^7.1.2",
        "daisyui": "^5.0.50",
        "dependency-cruiser": "^17.0.0",
        "dotenv-cli": "^10.0.0",
        "dotenv-webpack": "^8.1.1",
        "eslint": "^9.32.0",
        "eslint-plugin-functional": "^9.0.2",
        "eslint-plugin-jsdoc": "^52.0.2",
        "eslint-plugin-svelte": "^3.11.0",
        "globals": "^16.3.0",
        "html-webpack-plugin": "^5.6.3",
        "jsdom": "^26.1.0",
        "knip": "^5.62.0",
        "postcss": "^8.5.6",
        "postcss-loader": "^8.1.1",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "style-loader": "^4.0.0",
        "svelte-check": "^4.3.0",
        "svelte-preprocess": "^6.0.3",
        "tailwindcss": "^4.1.11",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.38.0",
        "vitest": "^3.2.4",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    }
}
