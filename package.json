{
    "name": "ist-alpine",
    "version": "1.0.0",
    "description": "Ist is a micro-app that reads your task list from [Todoist](https://todoist.com/), then displays the most important task that can currently be worked on.",
    "scripts": {
        "start": "dotenv -- webpack serve --open --mode development --no-stats",
        "build": "webpack --mode production",
        "test": "svelte-check && vitest run",
        "test:coverage": "svelte-check && vitest run --coverage",
        "test:watch": "vitest",
        "test:coverage:watch": "vitest --coverage",
        "lint": "eslint 'src/**/*.{svelte,ts}'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/realmikkifriend/ist.git"
    },
